{
  "id": "net.xmind.XMind",
  "command": "xmind",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "rename-icon": "xmind",
  "rename-mime-file": "xmind.xml",
  "finish-args": [
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network",
    "--filesystem=xdg-download",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-desktop",
    "--filesystem=/tmp",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=/run/media",
    "--filesystem=/media",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "xmind",
      "buildsystem": "simple",
      "build_commands": [
        "ar x xmind.deb",
        "tar xf data.tar.gz",
        "cp -r usr/* /app",
        "mkdir -p /app/main",
        "cp -r opt/Xmind/* /app/main",
        "install -Dm644 net.xmind.XMind.metainfo.xml /app/share/metainfo/net.xmind.XMind.metainfo.xml",
        "install -Dm644 net.xmind.XMind.desktop -t /app/share/applications",
        "mkdir -p /app/bin",
        "install -Dm755 xmind /app/bin/xmind",
        "rm -rf /app/share/icons/hicolor/1024x1024"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://xmind.app/xmind/downloads/Xmind-for-Linux-amd64bit-26.01.03145-202510170359.deb",
          "sha256": "87bab10dfdb5f7eb7ca0093c20006ceccc9ab0d7772bf3c033a6bbf64c9a2ddc",
          "dest-filename": "xmind.deb",
          "only-arches": ["x86_64"]
        },
        {
          "type": "file",
          "url": "https://xmind.app/xmind/downloads/Xmind-for-Linux-arm64bit-26.01.03145-202510192005.deb",
          "sha256": "58b386d7a8730a6a97f6299b692b6130f63b67c1ac6220e24844ac37159fa4f3",
          "dest-filename": "xmind.deb",
          "only-arches": ["aarch64"]
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.metainfo.xml"
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.desktop"
        },
        {
          "type": "script",
          "dest-filename": "xmind",
          "commands": [
            "#!/bin/bash",
            "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
            "exec /app/main/xmind \"$@\""
          ]
        }
      ]
    }
  ]
}
